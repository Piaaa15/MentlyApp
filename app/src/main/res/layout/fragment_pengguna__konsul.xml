<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pengguna_Konsul"
    android:background="@color/white">


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/kotak_pink_konsul" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/pernyataan1" />


    <View
        android:id="@+id/view3"
        android:layout_width="335dp"
        android:layout_height="73dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/pernyataan2" />

    <View
        android:id="@+id/bulat"
        android:layout_width="140dp"
        android:layout_height="118dp"
        android:layout_alignStart="@id/rectangle_1"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/bulat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rectangle_1"
        android:layout_alignTop="@+id/rectangle_1"
        android:layout_alignBottom="@+id/rectangle_1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Konsultasikan Masalah Anda!"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Saya merasa cemas setiap saat.pia dydyfcfyufd"
        android:textColor="@color/biru_2"
        android:textSize="16dp" />

    <RadioButton
        android:id="@+id/jwbya1"
        android:layout_width="344dp"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="180dp"
        android:text="Ya" />

    <RadioButton
        android:id="@+id/jwbtdk1"
        android:layout_width="344dp"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="245dp"
        android:text="Tidak" />


</RelativeLayout>


